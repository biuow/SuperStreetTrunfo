<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="141dp"
        android:layout_height="128dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:src="@drawable/sf2" />
    <LinearLayout
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_char"
            android:src="@drawable/ken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/char_golpe"
                android:textSize="24sp"
                android:textStyle="bold"
                android:text="VELOCIDADE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_char_input"
                android:textSize="24sp"
                android:text="0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="1dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/enemy_golpe"
                android:layout_gravity="right"
                android:textSize="24sp"
                android:textStyle="bold"
                android:text="VELOCIDADE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_enemy_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="0000"
                android:textSize="24sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_enemy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sagat" />
    </LinearLayout>

</LinearLayout>
